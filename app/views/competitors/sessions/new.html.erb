<div class="container" style="box-shadow: 10px 10px grey;border: 1px solid black;
    background: url('<%= asset_path 'competition-icon-4.png' %>');
    background-repeat: no-repeat;
    padding:15px;">
  <div class="col-md-6 col-md-offset-3">

<h2>Log in</h2>
<hr style="width: 100%; height: 2px; background-color:black;">

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>
<br>
<p><b><%= render "competitors/shared/links" %></b></p>
</div>
</div>
