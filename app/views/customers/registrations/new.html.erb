<div class="container" style="box-shadow: 10px 10px grey;border: 1px solid black;
    background: url('<%= asset_path 'order.png' %>');
    background-repeat: no-repeat;
    padding:10px;" >
  <div class="col-md-6 col-md-offset-4">
    <h2>Sign up</h2>
    <hr style="width: 100%; height: 2px; background-color:black;">
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :customer_name, required: true, autofocus: true %>
    <%= f.input :organization_name, required: true %>
    <%= f.input :mobile_num, required: true %>
    <%= f.input :email, required: true %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>
<br>
<p><b><%= render "customers/shared/links" %></b></p>

  </div>
  


</div>

