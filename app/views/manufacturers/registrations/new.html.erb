
<div class="container" style="box-shadow: 10px 10px grey;border: 1px solid black;
    background: url('<%= asset_path 'man.png' %>');
    background-repeat: no-repeat;
    padding:15px;" >
  <div class="col-md-6 col-md-offset-3">
<h2>Sign up</h2>
<hr style="width: 100%; height: 2px; background-color:black;">
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :manufacturer_name, required: true, autofocus: true  %>
  	<%= f.input :manufacturing_unit_name, required: true  %>
  	<%= f.input :address, required: true %>
  	<%= f.input :mobile_num, required: true  %>
    <%= f.input :email, required: true %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>
<br>
<p><b><%= render "manufacturers/shared/links" %></b></p><br>
</div>
</div>

<br>